<%= turbo_stream_from :rooms %>
<%= turbo_frame_tag :rooms do %>
  <%= render @rooms %>
<% end %>

<% if @errors %>
  <%= @errors %>
<% end %>

<%= form_with model: @new_room, class: "mt-4" do |f| %>
<div class="flex flex-row">
  <%= f.text_field :title, class: 'border' %>
  <%= f.submit "Create room", class: "group justify-center py-2
  px-4 border border-transparent rounded-md text-white bg-indigo-600
  cursor-pointer" %>
</div>
<% end %>