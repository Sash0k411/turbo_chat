<%= turbo_stream_from @room %>

<h2>
  <%= @room.title %>
</h2>

<div class="flex flex-col h-96 justify-between">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8" id="chat-container">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8" id=<%= @room.channel_id %>>
      <%= render partial: "messages/message", collection: @messages %>
    </div>
  </div>
</div>

<%= render partial: "messages/form", locals: { new_messages: @new_message } %>